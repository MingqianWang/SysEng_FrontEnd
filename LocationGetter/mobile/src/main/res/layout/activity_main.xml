<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get loation"
        android:id="@+id/GETLOCATION"
        android:layout_centerHorizontal="true"
        android:onClick="getLocationOnClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start update"
        android:id="@+id/STARTUPDATES"
        android:layout_centerHorizontal="true"
        android:onClick="startLocationUpdatesHandler"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop update"
        android:id="@+id/STOPUPDATES"
        android:layout_centerHorizontal="true"
        android:onClick="stopLocationUpdatesHandler"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/longitudeTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/latitudeTextView" />
</LinearLayout>