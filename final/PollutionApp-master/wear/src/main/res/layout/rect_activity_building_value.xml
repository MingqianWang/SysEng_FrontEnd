<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#efeeee"
    tools:context="com.example.maddiewhitehall.pollutionapp.BuildingValueActivity"
    tools:deviceIds="wear_square">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/white">

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/sun_yellow"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:background="@null"
                android:id="@+id/lightButton"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <!--android:contentDescription="changeValues"-->

        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:columnCount="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingLeft="25dp"
                    android:text="LUX"
                    android:textColor="@color/black_54p"
                    android:textSize="20dp"/>

                <LinearLayout

                    android:orientation="horizontal"
                    android:columnCount="5"
                    android:paddingTop="15dp"
                    android:paddingLeft="25dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/Grid1a"
                        android:layout_height="25dp"
                        android:layout_width="7dp"
                        android:background="@color/light_grey"
                        android:layout_margin="1dp">
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/Grid1b"
                        android:layout_height="25dp"
                        android:layout_width="7dp"
                        android:background="@color/light_grey"
                        android:layout_margin="1dp">
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/Grid1c"
                        android:layout_height="25dp"
                        android:layout_width="7dp"
                        android:background="@color/light_grey"
                        android:layout_margin="1dp">
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/Grid1d"
                        android:layout_height="25dp"
                        android:layout_width="7dp"
                        android:background="@color/light_grey"
                        android:layout_margin="1dp">
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/Grid1e"
                        android:layout_height="25dp"
                        android:layout_width="7dp"
                        android:background="@color/light_grey"
                        android:layout_margin="1dp">
                    </RelativeLayout>


                </LinearLayout>


            </GridLayout>
        </ScrollView>


    </LinearLayout>
</LinearLayout>
